<div class="row post p-4 m-4">
    <div class="col-md-12">
        <form id="post-{{post.id}}">
            <!-- feature_image -->
            <div class="row feature-image">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="post-feature-image">Feature Image:</label>
                        <input type="text" id="post-feature-image" class="form-control" value="{{post.feature_image}}"/>
                    </div>
                </div>
            </div>
            <!-- title -->
            <div class="row title">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="post-title">Title:</label>
                        <input type="text" id="post-title" class="form-control" value="{{post.title}}"/>
                    </div>
                </div>
            </div>
            <!-- content -->
            <div class="row content">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="post-content">Content:</label>
                        <textarea id="post-content" class="form-control">{{post.content}}</textarea>
                    </div>
                </div>
            </div>
            <!-- submit -->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="hidden" id="post-id" class="form-control" value="{{post.id}}"/>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        <p class="text-center my-3">
                            <a href="javascript:history.back()" class="text-muted">Cancel</a>
                        </p>
                    </div>
                </div>
            </div>
        </form>       
    </div>
</div>
