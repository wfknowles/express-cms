<!-- login -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form-wrapper form-mini text-center">
                <form class="login">
                    <h1 class="h3 mb-3">Login</h1>
                    <span class="divider text-muted pb-3"></span>
                    <div class="form-group">
                        <input type="email" class="form-control" id="user-email" placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="user-password" placeholder="Password">
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                    <a class="btn btn-secondary btn-lg btn-block" href="/register">Sign Up</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>
